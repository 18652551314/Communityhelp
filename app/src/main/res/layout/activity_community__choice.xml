<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="#35bbb0"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择社区"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:text="已开通的社区"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_margin="10px"
                android:id="@+id/jing"
                android:onClick="onClick_jing"
                android:background="@drawable/beijing"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_jing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:background="@mipmap/fzf" />

                <TextView
                    android:id="@+id/textView_community_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:text="经八路文联社区"
                    android:textSize="15sp" />
            </LinearLayout>

                <LinearLayout
                    android:layout_margin="10px"
                    android:id="@+id/da"
                    android:onClick="onClick_da"
                    android:background="@drawable/beijing"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_da"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20px"
                        android:background="@mipmap/fzf" />

                    <TextView
                        android:id="@+id/textView_community_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20px"
                        android:text="大石桥城中央社区"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                android:layout_margin="10px"
                android:id="@+id/dashi"
                android:onClick="onClick_dashi"
                android:background="@drawable/beijing"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_dashi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:background="@mipmap/fzf" />

                <TextView
                    android:id="@+id/textView_community_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:text="大石桥时尚party小区"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10px"
                android:id="@+id/dashiqiao"
                android:onClick="onClick_dashiqiao"
                android:background="@drawable/beijing"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_dashiqiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:background="@mipmap/fzf" />

                <TextView
                    android:id="@+id/textView_community_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:text="大石桥天下城社区"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10px"
                android:id="@+id/zhongheng"
                android:onClick="onClick_zhongheng"
                android:background="@drawable/beijing"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_zhongheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:background="@mipmap/fzf" />

                <TextView
                    android:id="@+id/textView_community_05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:text="大石桥中亨社区"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10px"
                android:id="@+id/jingba"
                android:onClick="onClick_jingba"
                android:background="@drawable/beijing"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_jingba"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:background="@mipmap/fzf" />

                <TextView
                    android:id="@+id/textView_community_06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:text="经八路广厦城市之巅小区"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10px"
                android:id="@+id/jingbalu"
                android:onClick="onClick_jingbalu"
                android:background="@drawable/beijing"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_jingbalu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:background="@mipmap/fzf" />

                <TextView
                    android:id="@+id/textView_community_07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:text="经八路尚都国际小区"
                    android:textSize="15sp" />
            </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_decide_community_select"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="80px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="@drawable/background_corp_blue"
                android:text="去看看吧"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
