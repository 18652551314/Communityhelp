<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".thirdpage.publication.bbs.CommunityActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@color/title_green">

        <LinearLayout
            android:id="@+id/back_layout_CommunityBbs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="23px"
                android:layout_height="46px"
                android:layout_margin="20px"
                android:background="@drawable/fh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="社区论坛"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/go_layout_CommunityBbs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:gravity="center"
                android:id="@+id/textView_sendMyBbs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="发布"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="20px"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="11"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="22"
                android:layout_width="0px"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100px">
                    <TextView
                        android:text="  标        题:     "
                        android:textColor="@color/most_black"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:maxLength="14"
                        android:id="@+id/editext_BbsTitle"
                        android:background="@color/normal_background"
                        android:hint="输入标题"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="#848484"
                    android:layout_width="match_parent"
                    android:layout_height="2px"></View>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30px"></LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_weight="22"
                android:layout_width="0px"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/editext_BbsDailog"
                    android:background="@color/normal_background"
                    android:textSize="18sp"
                    android:hint="  输入内容
                    "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30px"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"></LinearLayout>
            <View
                android:layout_weight="22"
                android:background="#848484"
                android:layout_width="0px"
                android:layout_height="2px"></View>
        </LinearLayout>

        <GridView
            android:layout_marginTop="50px"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:id="@+id/grideView_Bbs_picture"
            android:numColumns="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></GridView>

    </LinearLayout>
</LinearLayout>
