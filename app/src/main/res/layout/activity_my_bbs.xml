<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".thirdpage.publication.bbs.MyBbsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@color/title_green">

        <LinearLayout
            android:id="@+id/back_layout_myPublication"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="23px"
                android:layout_height="46px"
                android:layout_margin="20px"
                android:background="@drawable/fh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="社区论坛"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageView_editBbs"
                android:layout_gravity="center"
                android:background="@drawable/edit"
                android:layout_width="44px"
                android:layout_height="49px" />

            <LinearLayout
                android:layout_width="20px"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_weight="11"
        android:layout_width="match_parent"
        android:layout_height="0px"></LinearLayout>



</LinearLayout>
