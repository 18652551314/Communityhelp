<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipChildren="false"
    tools:context="com.example.administrator.communityhelp.thirdpage.publication.bbs.PictureViewPagerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="#FF484848">

        <ImageView
            android:padding="10px"
            android:id="@+id/imageView_deletePic"
            android:layout_width="46px"
            android:layout_height="52px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:background="@drawable/imgdel" />

        <ImageView
            android:padding="10px"
            android:id="@+id/imageView_back"
            android:layout_width="30px"
            android:layout_height="60px"
            android:layout_marginLeft="30px"
            android:background="@drawable/fh"
            android:layout_alignTop="@+id/imageView_deletePic"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="11"
        android:background="@color/most_black">

        <com.example.administrator.communityhelp.my_other.BigPhotoViewPager
            android:id="@+id/viewPager_bbsPictureShow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100px"
            android:layout_marginLeft="0px"
            android:layout_marginRight="0px"
            android:layout_marginTop="100px"></com.example.administrator.communityhelp.my_other.BigPhotoViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="120px"
            android:gravity="center">

            <ImageView
                android:visibility="gone"
                android:id="@+id/imageView_viewPagerProgress1"
                android:layout_width="10px"
                android:layout_height="10px"
                android:layout_margin="5px"
                android:background="@drawable/circlesmall" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/imageView_viewPagerProgress2"
                android:layout_width="10px"
                android:layout_height="10px"
                android:layout_margin="5px"
                android:background="@drawable/circlesmall" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/imageView_viewPagerProgress3"
                android:layout_width="10px"
                android:layout_height="10px"
                android:layout_margin="5px"
                android:background="@drawable/circlesmall" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/imageView_viewPagerProgress4"
                android:layout_width="10px"
                android:layout_height="10px"
                android:layout_margin="5px"
                android:background="@drawable/circlesmall" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/imageView_viewPagerProgress5"
                android:layout_width="10px"
                android:layout_height="10px"
                android:layout_margin="5px"
                android:background="@drawable/circlesmall" />
        </LinearLayout>
        <ZoomControls
            android:id="@+id/zoomCtrl_picContrl"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ZoomControls>
    </RelativeLayout>
</LinearLayout>
