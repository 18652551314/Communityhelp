<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.communityhelp.thirdpage.personal_information.RenameMyCallingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@color/title_green">

        <LinearLayout
            android:id="@+id/back_layout_myName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="23px"
                android:layout_height="46px"
                android:layout_margin="20px"
                android:background="@drawable/fh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改昵称"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="#fafafa"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="11">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="0px">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <EditText
                android:id="@+id/editText_myName"
                android:background="#ffffff"
                android:layout_weight="20"
                android:layout_width="0px"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0px">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
            <Button
                android:id="@+id/btn_commitNewName"
                android:text="提交"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/background_corp_blue"
                android:layout_weight="20"
                android:layout_width="0px"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_weight="25"
            android:layout_width="match_parent"
            android:layout_height="0px"></LinearLayout>
    </LinearLayout>

</LinearLayout>
