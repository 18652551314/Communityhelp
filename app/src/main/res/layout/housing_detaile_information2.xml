<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="#35bbb0">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22px"
            android:background="@mipmap/back" />

        <TextView
            android:id="@+id/textview_back_housing_detailed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="52px"
            android:text="返回"
            android:textColor="#ffff"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="出租详情"
            android:textColor="#ffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="11">
      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scrollbars="none">
        <android.support.v7.widget.CardView
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150px">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true">

                        <com.example.administrator.communityhelp.my_other.CircularImage
                            android:id="@+id/pinche_iv1"
                            android:layout_width="120px"


                            android:layout_height="120px"
                            android:layout_marginLeft="30px"
                             />

                        <TextView
                            android:id="@+id/pinche_tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30px"
                            android:layout_toRightOf="@+id/pinche_iv1"

                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/time_housing_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/pinche_iv1"
                            android:layout_marginLeft="30px"
                            android:layout_toRightOf="@+id/pinche_iv1"

                            android:textColor="@color/item_line_gray" />
                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/item_line_gray">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="20px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:id="@+id/tit_chuzu"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="40px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/neirong_housing"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="20px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lianxiren_tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/dianhua_housing_1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"

                        android:textSize="15sp" />
                </LinearLayout>




                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="660px"
                    android:id="@+id/carpooling_details_relativelayout">
                    <RelativeLayout
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content">
                        <ImageView
                            android:id="@+id/iv_housing_detailed_mess"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/hf"/>
                        <TextView
                            android:layout_toRightOf="@+id/iv_housing_detailed_mess"
                            android:layout_centerVertical="true"
                            android:id="@+id/tv_housing_detailed_mess"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"/>

                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:layout_marginTop="10px"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/item_line_gray"/>

                <ListView
                    android:id="@+id/carpooling_details_listview"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>



            </LinearLayout>
        </android.support.v7.widget.CardView>
        </ScrollView>
    </LinearLayout>






</LinearLayout>