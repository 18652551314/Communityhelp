<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lookfor_22"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150px">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true">

                    <com.example.administrator.communityhelp.my_other.CircularImage
                        android:id="@+id/look_for_sth_adp_2_headimgurl"
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_marginLeft="30px"
                        android:background="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/look_for_sth_adp_2_userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_toRightOf="@+id/look_for_sth_adp_2_headimgurl"
                        android:text="LoL选手"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/look_for_sth_adp_2_createTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/look_for_sth_adp_2_headimgurl"
                        android:layout_marginLeft="30px"
                        android:layout_toRightOf="@+id/look_for_sth_adp_2_headimgurl"
                        android:text="2016-8-20 09:59:08"
                        android:textColor="@color/item_line_gray" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/item_line_gray">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/look_for_sth_adp_2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起点:"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/look_for_sth_adp_2_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:lines="2"
                    android:singleLine="false"
                    android:text="出发时间:"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="20px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/look_for_sth_adp_2_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话:"
                    android:textSize="15sp" />

                <TextView

                    android:id="@+id/look_for_sth_adp_2_contactPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:text="郑州"
                    android:textSize="15sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="20px">

                <ImageView
                    android:id="@+id/look_for_sth_adp_2_picPath"
                    android:layout_width="180px"
                    android:layout_height="140px"
                    android:layout_alignParentBottom="true"
                    android:background="@mipmap/bml"
                    android:text="描述:"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/fangwu_huifu_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="20px"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:layout_toLeftOf="@+id/look_for_sth_adp_2_replyNum"
                        android:background="@mipmap/wdlt" />

                    <TextView
                        android:id="@+id/look_for_sth_adp_2_replyNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="20px"
                        android:layout_marginRight="40px"
                        android:text="郑州"
                        android:textSize="15sp" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>