<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/item_line_gray"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.administrator.communityhelp.my_other.CircularImage
                    android:id="@+id/imageView_myMessage_headPic"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_marginTop="20px"
                    android:background="@drawable/wd_sz" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20px"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:layout_marginTop="20px">

                        <TextView
                            android:id="@+id/textView_myMessage_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="你的名字" />

                        <TextView
                            android:id="@+id/textView_myMessage_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="time" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textView_myMessage_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="20px"
                        android:text="ceshi111111111111111111111111111111111111111111111111111111111111111111111111" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20px"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView_myMessage_playSound"
            android:visibility="gone"
            android:layout_marginLeft="160px"
            android:background="@drawable/voice_play_selector"
            android:src="@mipmap/chatfrom_voice_playing"
            android:scaleType="fitStart"
            android:paddingLeft="30px"
            android:layout_width="wrap_content"
            android:layout_height="60px" />
        <TextView
            android:id="@+id/text_recordertime"
            android:visibility="gone"
            android:textSize="10sp"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/image_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20px"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/imageView_myMessage_Pic1"
                    android:layout_marginLeft="55px"
                    android:layout_height="200px"
                    android:layout_width="200px"
                    ></ImageView>
                <ImageView
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/imageView_myMessage_Pic2"
                    android:layout_height="200px"
                    android:layout_width="200px"
                    ></ImageView>
                <ImageView
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="55px"
                    android:id="@+id/imageView_myMessage_Pic3"
                    android:layout_height="200px"
                    android:layout_width="200px"
                    ></ImageView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:layout_alignParentLeft="true"
                    android:visibility="gone"
                    android:id="@+id/imageView_myMessage_Pic4"
                    android:layout_marginLeft="55px"
                    android:layout_height="200px"
                    android:layout_width="200px"
                    ></ImageView>
                <ImageView
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/imageView_myMessage_Pic5"
                    android:layout_height="200px"
                    android:layout_width="200px"
                    ></ImageView>
                <ImageView
                    android:layout_weight="1"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:layout_marginRight="55px"
                    android:layout_height="200px"
                    android:layout_width="200px"
                    ></ImageView>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20px"></LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/item_line_gray"></View>
</LinearLayout>