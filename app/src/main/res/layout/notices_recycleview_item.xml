<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f0f0"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10px"
        android:background="@drawable/set_shap"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image_notices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10px"
                    android:background="@mipmap/gg_tx" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/notices_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="停水公告"
                    android:layout_margin="10px"
                    android:textStyle="bold"
                    android:textColor="@color/most_black"/>

                <TextView
                    android:id="@+id/notices_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10px"
                    android:text="2015年12月12日 09:03"
                    android:textSize="10sp" />

            </LinearLayout>


        </LinearLayout>


        <View
            android:id="@+id/line_view"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:background="@color/item_line_gray" />

        <TextView
            android:id="@+id/text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="内容检测" />
    </LinearLayout>
</LinearLayout>