<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:focusable="false"
    android:id="@+id/linearLayout_myoder_item"
    android:orientation="horizontal">

    <ImageView

        android:id="@+id/imageView_myOrder_item"
        android:layout_width="240px"
        android:layout_height="200px"
        android:layout_margin="10px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_myOrder_item_goodsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="商品的名字"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/most_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_myOrder_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="2017年01月10日 10:11" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_myOrder_item_totolCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总价：  "
                android:textSize="13sp" />
            <TextView
                android:layout_marginLeft="20px"
                android:id="@+id/textView_myOrder_item_totolCount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="数量:" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:textColor="@color/font_orange"
                android:layout_marginTop="10px"
                android:background="@mipmap/wd_03"
                android:layout_marginBottom="18px"
                android:id="@+id/btn_myOrder_item_pay"
                android:text="请付款"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:textColor="@color/font_orange"
                android:layout_marginTop="10px"
                android:layout_marginLeft="10px"
                android:background="@mipmap/wd_03"
                android:layout_marginBottom="18px"
                android:id="@+id/btn_myOrder_item_delate"
                android:text="删除"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>